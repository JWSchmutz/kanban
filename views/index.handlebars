<nav class="container">
  <div class="row">
    <h1 style="color:#F2542D;"class="col-sm-9">Kanban</h1>
    <div class="col-sm-3">
      <ul>
        <li><button id="jeremiah" type="button" class="btn btn-info">All</button></li>
        <li><button onclick="filterSelection('jeremiah')" type="button" class="btn btn-info">Carson's</button></li>
        <li><button type="button" class="btn btn-info">Jeremiah's</button></li>
      </ul>
    </div>
  </div>
</nav>
<div class="container">
  <div class="row kanban-board">
    <div id="to-do-column" data-name="To Do" ondrop="drop(event, this)" ondragover="allowDrop(event)" class="col sm-4">
      <h2>To Do</h2>
        {{#each tasks}}
          {{#ifEquals this.status "To Do"}}
           {{> card}}
          {{/ifEquals}}
        {{/each}}
      <div>{{> addTask}}</div>
    </div>
    <div data-name="Working"  ondragover="allowDrop(event)" ondrop="drop(event, this)" class="col-struct col sm-4">
      <h2>Working</h2>
      {{#each tasks}}
        {{#ifEquals this.status "Working"}}
          {{> card}}
        {{/ifEquals}}
      {{/each}}
    </div>
    <div data-name="Finished"  ondragover="allowDrop(event)" ondrop="drop(event, this)" class="col-struct col sm-4">
      <h2>Finished</h2>
      {{#each tasks}}
        {{#ifEquals this.status "Finished"}}
          {{> card}}
        {{/ifEquals}}
      {{/each}}
    </div>
  </div>
</div>


<!-- Modal -->
