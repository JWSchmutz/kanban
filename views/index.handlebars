  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="input-group input-group-sm mb-3">
          <label style="padding-right:10px"for="task-name">Task Name: </label>
          <input id="task-name" type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
        </div>
         <div class="input-group input-group-sm mb-3">
          <label style="padding-right:10px"for="assign-name">Assignee: </label>
          <div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text" for="inputGroupSelect01">Options</label>
  </div>
  <select class="custom-select" id="inputGroupSelect01">
    <option selected>Choose...</option>
    <option value="Jeremiah">Jeremiah</option>
    <option value="Carson">Carson</option>
  </select>
</div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button id="create-task-button"type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>